<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <kr.rrcoporation.rrfestival.festival.view.FreezingViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/group_bottom_layout" />

    <LinearLayout
        android:id="@+id/group_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            android:orientation="horizontal">

            <View
                android:id="@+id/map_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></View>

            <View
                android:id="@+id/favorite_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></View>

            <View
                android:id="@+id/population_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></View>

            <View
                android:id="@+id/setting_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bottom_map_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bottom_map_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_map_on" />

                <TextView
                    android:id="@+id/bottom_map_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지도"
                    android:textColor="@color/navy"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#EFEFEF"></LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_favorite_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bottom_favorite_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_like_off" />

                <TextView
                    android:id="@+id/bottom_favorite_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관심자리"
                    android:textColor="@color/darkdeepgray"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#EFEFEF"></LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_top_population_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bottom_population_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_popu_off" />

                <TextView
                    android:id="@+id/bottom_population_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인기자리"
                    android:textColor="@color/darkdeepgray"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#EFEFEF"></LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_setting_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bottom_setting_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_sett_off" />

                <TextView
                    android:id="@+id/bottom_setting_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설정"
                    android:textColor="@color/darkdeepgray"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>